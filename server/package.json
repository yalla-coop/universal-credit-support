{
  "name": "hyde-universal-credit-support-server",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env DEBUG=server nodemon --exec babel-node ./index.js",
    "storybook": "cd client/ && npm run storybook",
    "start": "cross-env DEBUG=server node dist/index.js",
    "build:server": "cross-env DEBUG=server babel . --out-dir ../dist",
    "build": "npm run clean && npm run build:server",
    "migrate:up": "db-migrate -m database/migrations up",
    "migrate:down": "db-migrate -m database/migrations down",
    "migrate:create": "func() { db-migrate -m database/migrations create \"$1\" --sql-file; }; func",
    "clean": "rm -rf dist && mkdir dist",
    "lint": "eslint",
    "test": "jest",
    "cover": "nyc npm t",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "build:db": "babel-node ./database/build.script.js",
    "build:db:prod": "babel-node ./database/dummy-data-prod/build.script.js"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "@sendgrid/mail": "^7.7.0",
    "@sentry/node": "^7.17.4",
    "@sentry/tracing": "^7.17.4",
    "aws-sdk": "^2.971.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "csurf": "^1.11.0",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.0",
    "json2csv": "^5.0.7",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "pg": "^8.8.0",
    "pg-query-stream": "^4.2.4",
    "serve-favicon": "^2.5.0",
    "uniqid": "^5.4.0",
    "uuid": "^9.0.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "babel-loader": "8.1.0",
    "chai": "^4.3.4",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^29.3.0",
    "mocha": "^9.0.3",
    "nodemon": "^2.0.12",
    "prettier": "^2.0.4",
    "ts-jest": "^29.0.3"
  },
  "nodemonConfig": {
    "watch": [
      ".",
      "./package.json",
      "../client/src/constants"
    ]
  },
  "author": "",
  "license": "ISC"
}
